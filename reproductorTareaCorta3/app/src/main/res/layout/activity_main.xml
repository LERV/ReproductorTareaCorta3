<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luis.edward.reproductortareacorta3.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_height="150dp"
            android:layout_width="fill_parent">
            <TextView
                android:id="@+id/textViewLetra"
                android:textAlignment="gravity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="TextView" />

        </ScrollView>

        <SeekBar
            android:id="@+id/seekBarTiempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ScrollView01"
            android:layout_marginTop="42dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/seekBarTiempo"
            android:layout_marginTop="38dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2">

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickAnt"
                android:text="Ant"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickPlay"
                android:textAllCaps="false"
                android:text="Play" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickPause"
                android:textAllCaps="false"
                android:text="Pause" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickSig"
                android:text="Sig"
                android:textAllCaps="false" />

        </LinearLayout>

        <ListView
            android:id="@+id/listViewLuis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:layout_weight="1"
            android:background="?attr/colorPrimaryDark"
            android:clickable="false" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
